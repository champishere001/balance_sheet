  <!-- Firebase (Compat) - lightweight init for start list -->
  <script defer src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script defer src="https://www.gstatic.com/firebasejs/9.23.0/firebase-database-compat.js"></script>

  <script>
    /* =========================================================
       LANDING (index.html)
       - Move "Start City / Pickup" selection here
       - When user clicks Within HP -> show Himachal starts (local)
       - When user clicks Outside HP -> show Outside starts (intercity)
       - Then go to dashboard with mode + start prefilled
       ========================================================= */

    const firebaseConfig = {
      apiKey: "AIzaSyAKaFrj7JobWLloNQqzvx3SSibyrsiwzug",
      authDomain: "revnue-records.firebaseapp.com",
      databaseURL: "https://revnue-records-default-rtdb.asia-southeast1.firebasedatabase.app",
      projectId: "revnue-records",
      storageBucket: "revnue-records.firebasestorage.app",
      messagingSenderId: "182348503564",
      appId: "1:182348503564:web:480085405b0917724d9fce",
      measurementId: "G-9J5JQFDX4R"
    };

    const NODE_TEMPLATES = "templates";

    const $ = (id)=>document.getElementById(id);

    let SELECTED_MODE = null;          // "within" | "outside"
    let TPL_ARR = null;               // normalized templates array
    let STARTS = [];                  // current datalist values

    function isLocalComputed(tpl){
      const routeId = String(tpl.route_id || "").toUpperCase().trim();
      const regionStyle = String(tpl.region_style || "").toLowerCase().trim();
      const pkgId = String(tpl.package_id || tpl.key || "").toLowerCase();
      return regionStyle === "local" || routeId.endsWith("-LCL") || pkgId.includes("-local");
    }

    async function dbGet(db, path){
      return new Promise((resolve)=>{
        db.ref(path).once("value", (snap)=> resolve(snap.val()));
      });
    }

    async function ensureTemplatesLoaded(){
      if(TPL_ARR) return;
      const hint = $("startHint");
      hint.textContent = "Connecting to database…";

      // Firebase loads via defer; wait until global exists
      if(!window.firebase){
        await new Promise(r=>setTimeout(r, 60));
      }
      firebase.initializeApp(firebaseConfig);
      const db = firebase.database();

      hint.textContent = "Loading start locations…";
      const templates = await dbGet(db, NODE_TEMPLATES) || {};
      TPL_ARR = Object.entries(templates).map(([k,v])=>({ key:k, ...(v||{}) }));
      hint.textContent = "Start locations loaded ✅";
    }

    function buildStartListForMode(mode){
      if(!TPL_ARR) return;

      // within => local templates; outside => intercity templates
      const wantLocal = (mode === "within");
      const starts = new Set();

      TPL_ARR.forEach(t=>{
        const s = String(t.start_point || t.start || "").trim();
        if(!s) return;
        const local = isLocalComputed(t);
        if(wantLocal && !local) return;
        if(!wantLocal && local) return;
        starts.add(s.toUpperCase());
      });

      STARTS = Array.from(starts).sort((a,b)=>a.localeCompare(b));
      const dl = $("startList");
      dl.innerHTML = "";
      STARTS.forEach(v=>{
        const opt = document.createElement("option");
        opt.value = v;
        dl.appendChild(opt);
      });

      $("startHint").textContent =
        mode === "within"
          ? `Within Himachal: ${STARTS.length} start locations`
          : `Outside Himachal: ${STARTS.length} start locations`;
    }

    function normalizeStartInput(){
      const typed = String($("startInp").value || "").trim().toUpperCase();
      if(!typed) return "";
      const exact = STARTS.find(s => s === typed);
      if(exact) return exact;
      const partial = STARTS.find(s => s.startsWith(typed));
      if(partial) return partial;
      return "";
    }

    function markModeUI(){
      document.querySelectorAll(".opt").forEach(el=>el.classList.remove("active"));
      const active = SELECTED_MODE === "within" ? $("goWithin") : $("goOutside");
      // button is inside .opt, so mark its parent card
      if(active){
        const card = active.closest(".opt");
        card && card.classList.add("active");
      }
      $("startBox").classList.remove("hidden");
      $("startInp").focus();
    }

    async function selectMode(mode){
      SELECTED_MODE = mode;
      localStorage.setItem("travel_origin", mode);
      markModeUI();

      await ensureTemplatesLoaded();
      buildStartListForMode(mode);
    }

    function goDashboard(){
      const start = normalizeStartInput();
      if(!SELECTED_MODE){
        alert("Please choose: Within Himachal or Outside Himachal first.");
        return;
      }
      if(!start){
        alert("Please select a Start City / Pickup from the list (or type and pick a match).");
        $("startInp").focus();
        return;
      }
      location.href = "./dashboard.html?mode=" + encodeURIComponent(SELECTED_MODE) + "&start=" + encodeURIComponent(start);
    }

    $("goWithin").onclick = ()=>selectMode("within");
    $("goOutside").onclick = ()=>selectMode("outside");
    $("goDash").onclick = goDashboard;

    // ENTER key on start input
    $("startInp").addEventListener("keydown", (e)=>{
      if(e.key === "Enter"){ e.preventDefault(); goDashboard(); }
    });

    $("yy").textContent = new Date().getFullYear();
  </script>

</body>
</html>